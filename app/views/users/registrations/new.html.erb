<div class="container">
      <h3 class="ml-5"><strong>新規会員登録</strong></h3>

      <%= form_with model: @user, url: user_registration_path do |f| %>

        <%= render "users/shared/error_messages", resource: resource %>
    <table class="">
        <tr>
        <td>名前 </td>
        <td></td>
        <td><%= f.text_field :name %></td>
        <td></td>
        <td></td>
      </tr>

      <tr>
        <td>メールアドレス</td>
        <td></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>

      <tr>
        <td>電話番号（ハイフンなし）</td>
        <td></td>
        <td><%= f.text_field :phone %></td>
      </tr>
      <tr>
        <td>パスワード（6文字以上)</td>
        <td></td>
        <td>  <% if @minimum_password_length %>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password" %>
        </td>
      </tr>
      <tr>
        <td>パスワード（確認用）</td>
        <td></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td></td>
        <td></td>
        <td><%= f.submit " 新 規 登 録 ", class:"btn btn-success" %></td>
      </tr>
  </table>
  <% end %>
  <h3><strong>既に登録済みの方</strong></h3>
  <%= render "users/shared/links" %> からログインしてください
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">会員情報編集</h4>
        <%= form_with model: @user, url: users_information_path, method: :patch do |f| %>
        <%= render '/public/shared/error_messages', resource: @user %>
        <table class="table table-borderless">
        <tr>
          <td>名前</td>
          <td><%= f.text_field :name %></td>
        </tr>

        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :phone %></td>
          <td></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
          <td></td>
        </tr>

        <tr>
          <td></td>
          <td><%= f.submit "編集内容を保存", class:"btn btn-success" %></td>
          <td><%= link_to "退会する", users_withdraw_path, class:"btn btn-danger" %></td>
        </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>

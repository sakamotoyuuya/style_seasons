<div class="container">
  <div class="row">
    <h3>コーディネート編集</h3>
  </div>
  <div class="row">
   <div class="col-3" >
    </div>
    <div class="col-6">
      <%= form_with model:@cordinate,url:admin_cordinate_path, method: :patch do |f| %>
        <table>
          <tbody>
              <tr>
               <td>コーディネート画像</td>
               <td>
                 <%= f.file_field :image, accept: "image/*" %>
               </td>
              </tr>
              <tr>
               <td>コーディネート名</td>
               <td>
                 <%= f.text_field :title, rows:'3', placeholder: "コーディネート名" %>
               </td>
              </tr>
              <tr>
               <td>コーディネート説明</td>
               <td>
                   <%= f.text_area :introduction, rows:'6', placeholder: "コーディネート説明"  %>
               </td>
              </tr>
              <tr>
                <td>季節</td>
              <td>
                 <%= f.collection_select(:season_id, Season.all, :id, :name) %>
              </td>
              </tr>
              <tr>
                <td>レビュー</td>
                <td>
                  <p></p>
                  <p></p>
                </td>
              </tr>
              <tr>
                <td>
                <%= f.submit "変更を保存",class: "btn btn-success" %>
                </td>
              </tr>
          </tbody>
        </table>
        <% end %>
      </div>
    <div class="col-3"></div>
  </div>
</div>
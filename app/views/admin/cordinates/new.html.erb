<div class="container">
  <div class="row">
    <h3>コーディネート新規登録</h3>
  </div>
  <div class="row">
   <div class="col-3" >
    </div>
    <div class="col-6">
      <%= form_with model: @cordinate, url: admin_cordinates_path do |f| %>

              <div class="d-flex">
               <div>コーディネート画像</div>
               <div>
                 <%= f.file_field :image, accept: "image/*" %>
               </div>
              </div>
              <div class="d-flex">
                <div>タイトル</div>
                <div>
                  <%= f.text_field :title  %>
                </div>
              </div>
              <div class="d-flex">
               <div>コーディネート説明</div>
               <div>
                   <%= f.text_area :introduction , rows:'6', placeholder: "コーディネート説明"  %>
               </div>
              </div>
              <div class="d-flex">
                <div>季節</div>
                <div>
                   <%= f.collection_select(:season_id, Season.all, :id, :name) %>
                </div>
              </div>
        </div>
    <div class="col-3"></div>
        <div>コーディネート紐付け</div>
          <div class="form-group">
            <span>商品</span>
              <div>
                <div class="imaging">
                  <div class="checkbox wrap">
                    <%= f.collection_check_boxes(:item_ids, Item.all, :id, :name) do |b| %>
                      <%= b.label { b.check_box + b.text } %><%= image_tag b.object.image, size: "120x80" %>
                    <% end %>
                  </div>
                </div>
              </div>
          </div>
        <%= f.submit "新規登録",class: "btn btn-success" %>
        <% end %>
        <div class="col-3"></div>
</div>
<div class="container">
  <dev class="row">
    <dev class="col">
      <h4 class="m-5">季節一覧・追加</h4>
      <%= form_with model:@season, url: admin_seasons_path do |f| %>
      <td>季節名</td>
      <td><%= f.text_field :name %></td>
      <td><%= f.submit "新規登録", class:"btn btn-success" %></td>
      <%end%>
    </dev>
  </dev>
</div>

<div class="container">
  <dev class="row">
    <div class="col">
      <table class="table table-hover mt-5">
        <tr>
          <th class="table-secondary" colspan="2">季節</th>
        </tr>
        <% @seasons.each do |season| %>
        <tr>
          <td><%= season.name %></td>
        </tr>
        <%end%>
      </table>
    </div>
  </dev>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="m-3">ユーザー一覧</h4>
        <table class="table table-hover">
          <thead>
            <tr class="table-secondary">
              <th>氏名</ht>
              <th>メールアドレス</th>
              <th></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= link_to "退会する", admin_users_unsubscribe_path(id: user.id), method: :patch, class:"btn btn-danger" %></td>
            </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>

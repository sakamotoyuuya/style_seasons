<div class="container">
  <div class="row">
    <h3>商品編集</h3>
  </div>
  <div class="row">
   <div class="col-3" >
    </div>
    <div class="col-8 item-form">
      <%= form_with model:@item,url:admin_item_path, method: :patch do |f| %>
      <div class="d-flex ">
           <div>商品画像</div>
           <div><%= f.file_field :image, accept: "image/*" %></div>

      </div>
      <div class="d-flex">
        <div>商品名</div>
        <div><%= f.text_field :name, rows:'3', placeholder: "商品名" %></div>
      </div>

      <div class="d-flex">
        <div>商品説明</div>
        <div><%= f.text_area :introduction, rows:'6', placeholder: "商品説明"  %></div>
      </div>

      <div class="d-flex">
        <div>税抜価格</div>
        <div><%= f.number_field :price, rows:'3', placeholder: "1000" %></div>
      </div>
        <%= f.submit "変更を保存",class: "btn btn-success" %>
        <% end %>
      </div>
    <div class="col-3"></div>
  </div>
</div>

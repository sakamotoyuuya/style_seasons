<div class="col text-right m-3">
  <%= link_to "+", new_admin_item_path, class:"btn btn-success" %>
</div>
<div class="row">
   <% @items.each do |item| %>
  <div class="col-md-3">
    <div class="card h-100">
     <%= image_tag item.get_image(600,400) %>
      <div class="card-body">
        <h5 class="card-title text-center"><%= item.name %> </h5>
        <p class= "text-center"><%= item.price %>円</p>
        <p class="card-text text-center"> <%= item.message %></p>
        <p><%= link_to '編集する', edit_admin_item_path(item), class: "btn btn-sm btn-success"%></p>
        <p><%= link_to '削除する', admin_item_path(item), method: :delete, class: "btn btn-sm btn-danger"%></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
<div class="container">
  <div class="row">
    <h3>商品新規登録</h3>
  </div>
  <div class="row">
   <div class="col-3" >
    </div>
        <div class="col-8">
          <%= form_with model:@item,url:admin_items_path do |f| %>
              <div class="d-flex">
              　<div>商品画像</div>
              　<div>
              　  <%= f.file_field :image, accept: "image/*" %>
                </div>
              </div>
              <div class="d-flex">
              　<div>商品名</div>
              　<div>
              　  <%= f.text_field :name, rows:'3', placeholder: "商品名" %>
              　</div>
              </div>
              <div class="d-flex">
              　<div>商品説明</div>
              　<div>
              　    <%= f.text_area :message, rows:'6', placeholder: "商品説明"  %>
              　</div>
              </div>
              <div class="d-flex">
                <div>価格</div>
                <div>
                  <%= f.number_field :price, rows:'3', placeholder: "1000" %>
                </div>
              </div>
        </div>
                <%= f.submit '新規登録',class: "btn btn-success" %>
                <% end %>
      </div>
    <div class="col-3"></div>
</div>